# Default .editorconfig to be located at ~/.
# Will be used as fallback if cwd has no local .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.php]
indent_size = 4

[*.lua]
indent_size = 4

[*.{yml,yaml}]
indent_size = 4

[docker-compose.yml]
indent_size = 4

[*.vim]
trim_trailing_whitespace = unset
